  <script>
    var hora = 0
    if (hora < 6) {
      console.log('boa madrugada!')
    } else if (hora < 12) {
      console.log('bom dia')
    } else if (hora === 12 || hora < 18){
      console.log('boa tarde')
    } else {
      console.log('boa noite')
    }
  </script>
